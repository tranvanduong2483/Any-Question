<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="#99D9F2"
    android:paddingTop="17dp">

    <ImageView
        android:id="@+id/image_message_profile"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/avatar"
        android:layout_marginBottom="@dimen/dodai10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dodai10">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dodai20"
            android:paddingTop="@dimen/dodai5"
            android:text="tranvanduong"
            android:fontFamily="@font/robotomedium"
            android:textColor="#142E54"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="10sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_receive"
                android:maxWidth="240dp"
                android:paddingLeft="@dimen/dodai10"
                android:paddingTop="@dimen/dodai5"
                android:paddingBottom="@dimen/dodai5"
                android:paddingRight="@dimen/dodai10"
                android:gravity="center|left"
                android:text="hi man, how are you?"
                android:textSize="@dimen/cochu15"
                android:textColor="#F2F2F2"
                android:fontFamily="@font/robotomedium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/avatar"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="@dimen/dodai50"
        android:paddingTop="@dimen/dodai5"
        android:layout_height="@dimen/dodai20"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="20dp"
        android:text="11:40"
        android:textSize="10sp"
        android:fontFamily="@font/robotomedium"
        android:textColor="#142E54"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body"

        app:layout_constraintLeft_toRightOf="@+id/text_message_body" />


</LinearLayout>