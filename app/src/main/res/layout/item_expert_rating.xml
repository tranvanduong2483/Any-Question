<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_huyhieu"
            android:src="@drawable/top1st"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_thuhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_orange"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:text=" 1 "
            android:textStyle="bold"
            android:textColor="#000000"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_message_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"

            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tranvanduong"
            android:layout_marginBottom="2dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_thaoluan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_orange"
                android:maxWidth="240dp"
                android:padding="8dp"
                android:text="98 thảo luận"
                android:textColor="#000000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_orange"
                android:maxWidth="240dp"
                android:padding="8dp"
                android:text="5 sao"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_thaoluan"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:src="@drawable/avatar"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_field"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:textAllCaps="true"
            android:text="Công nghệ thông tin"
            android:textColor="#000000"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>