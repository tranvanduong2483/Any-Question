<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/gradient"
    tools:context=".ChangePasswordActivity">
    <TextView

        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="16dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:background="@drawable/button3"
        android:textColor="#CCC9BA"
        android:text="Hãy luôn thay đổi mật khẩu để giữ cho tài khoản của bạn an toàn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_old_password"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:hint="Nhập mật khẩu cũ"
        android:background="#11000000"
        android:textColorHint="#CCC9BA"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/edt_new_password1"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:hint="Nhập mật khẩu mới"
        android:background="#11000000"
        android:textColorHint="#CCC9BA"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/edt_new_password2"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:hint="Nhập lại một lần nữa"
        android:background="#11000000"
        android:textColorHint="#CCC9BA"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cancel"
            android:text="Hủy bỏ"
            android:layout_margin="10dp"

            app:strokeColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/btn_change_password"
            android:text="Thay đổi"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"/>

    </LinearLayout>



</LinearLayout>