<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:padding="15dp"
    android:gravity="center"
    android:background="@drawable/grad1"
    tools:context=".LoadingSearchExpertActivity">

    <ProgressBar
        android:id="@+id/performance_progress_bar"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:theme="@style/ProgressBarTheme"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:layout_width="@dimen/dodai350"
        android:layout_height="@dimen/dodai150">

        <LinearLayout
            android:layout_marginTop="@dimen/dodai10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dodai40">

            <ImageView
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_tittle"
                android:layout_width="@dimen/dodai35"
                android:layout_height="@dimen/dodai35"/>

            <TextView
                android:textStyle="bold"
                android:text="Tiêu đề: "
                android:textSize="20sp"
                android:textColor="#142e54"
                android:fontFamily="@font/robotomedium"
                android:layout_width="100dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_tittle"
                android:textSize="20sp"
                android:textColor="#142e54"
                android:fontFamily="@font/robotoregular"
                android:text="Cách tính căn bậc hai"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dodai30" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dodai10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dodai40">

            <ImageView
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_note"
                android:layout_width="@dimen/dodai35"
                android:layout_height="@dimen/dodai35"/>

            <TextView
                android:textStyle="bold"
                android:text="Ghi chú: "
                android:textSize="20sp"
                android:textColor="#142e54"
                android:fontFamily="@font/robotomedium"
                android:layout_width="100dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_note"
                android:textSize="20sp"
                android:text="(Không có)"
                android:textColor="#142e54"
                android:fontFamily="@font/robotoregular"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dodai30" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/dodai10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dodai40">

            <ImageView
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_make_money"
                android:layout_width="@dimen/dodai35"
                android:layout_height="@dimen/dodai35"/>
            <TextView
                android:textStyle="bold"
                android:text="Mức tiền: "
                android:textSize="20sp"
                android:textColor="#142e54"
                android:fontFamily="@font/robotomedium"
                android:layout_width="100dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_money"
                android:textSize="20sp"
                android:text="20.000 VND"
                android:textColor="#142e54"
                android:fontFamily="@font/robotoregular"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dodai30"  />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:onClick="btn_cancel"
        android:layout_marginTop="20dp"
        app:strokeColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:text="Hủy bỏ"
        android:textColor="#142e54"
        android:fontFamily="@font/robotomedium"
        android:background="@drawable/button_click1"
        android:layout_width="100dp"
        android:layout_height="40dp" />
</LinearLayout>