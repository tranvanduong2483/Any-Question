<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/grad1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="@dimen/dodai15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_myhistory"
            android:text="Lịch sử của tôi"
            android:fontFamily="@font/robotobold"
            android:textColor="#142E54"
            android:background="@drawable/button_click1"
            android:layout_marginLeft="@dimen/dodai15"
            android:layout_width="@dimen/dodai130"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_refesh"
            android:text="Làm mới"
            android:fontFamily="@font/robotobold"
            android:textColor="#142E54"
            android:background="@drawable/button_click1"
            android:layout_marginStart="@dimen/dodai120"
            android:layout_marginRight="@dimen/dodai15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
        android:id="@+id/tv_search"
        android:hint="Tìm kiếm cuộc thảo luận"
        android:layout_marginTop="@dimen/dodai30"
        android:layout_marginBottom="@dimen/dodai10"
        android:layout_marginRight="@dimen/dodai30"
        android:layout_marginLeft="@dimen/dodai30"
        android:background="@drawable/text_vien"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dodai10"
        android:layout_height="@dimen/dodai60"
        android:fontFamily="@font/robotoregular"
        android:textColor="#142e54"
        android:textColorHint="#142e54"
        />

    <ListView
        android:id="@+id/lv_history"
        android:layout_marginTop="@dimen/dodai15"
        android:layout_marginRight="@dimen/dodai30"
        android:layout_marginLeft="@dimen/dodai30"
        android:layout_marginBottom="@dimen/dodai15"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>