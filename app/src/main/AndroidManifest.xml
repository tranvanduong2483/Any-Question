<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duong.anyquestion">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ForgetPasswordctivity"></activity>
        <activity android:name=".SecurityActivity" />
        <activity android:name=".MessageHistoryActivity" />
        <activity
            android:name=".DetailQuestionActivity"
            android:label="Chi tiết câu hỏi" />
        <activity android:name=".RatingForExpertActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".EditInfomationActivity" />
        <activity
            android:name=".MessageListActivity"
            android:label="Cuộc thảo luận" />
        <activity
            android:name=".LoadingSearchExpertActivity"
            android:label="Tìm chuyên gia" />
        <activity android:name=".register.ExpertRegisterActivity" />
        <activity
            android:name=".ExpertMainActivity"
            android:label="@string/title_activity_expert_main"
            android:launchMode="singleTop" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserMainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".register.UserRegisterActivity"
            android:label="Đăng ký" />
        <activity
            android:name=".LoginActivity"
            android:label="Đăng nhập" />
    </application>

</manifest>